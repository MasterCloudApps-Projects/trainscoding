{
    "name": "@trainscoding/server",
    "version": "0.1.1",
    "description": "Web server running on NodeJS runtime, using Express framework.",
    "main": "src/index.ts",
    "scripts": {
        "start": "node lib/src/index.js",
        "dev": "nodemon",
        "prettier": "prettier --check src/**/*.ts",
        "prettier:fix": "prettier --write src/**/*.ts",
        "lint": "eslint . --ext .ts --format table --ignore-pattern '/lib/'",
        "lint:fix": "eslint . --ext .ts --fix --format table --ignore-pattern '/lib/'",
        "build": "tsc",
        "test": "test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MasterCloudApps-Projects/trainscoding.git"
    },
    "keywords": [
        "web",
        "server",
        "nodejs",
        "express",
        "app"
    ],
    "publishConfig": {
        "access": "public"
    },
    "author": "Javier Garcia Gonzalez <javier@garciagon.com>",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/MasterCloudApps-Projects/trainscoding/issues"
    },
    "homepage": "https://github.com/MasterCloudApps-Projects/trainscoding#readme",
    "dependencies": {
        "dotenv": "^10.0.0",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "nodemon": "^2.0.12",
        "ts-node": "^10.2.0",
        "typescript": "^4.3.5"
    }
}
