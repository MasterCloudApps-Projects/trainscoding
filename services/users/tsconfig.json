{
    "compilerOptions": {
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "module": "commonjs",
        "target": "ES5",
        "outDir": "dist",
        "rootDir": "./",
        "baseUrl": "./",
        "composite": true,
        "allowJs": false,
        "typeRoots": ["node_modules/@types"],
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/",
        "downlevelIteration": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "dist", "__tests__"]
}
